@model Clinic.Models.CountryOrRegion
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var title = "Add New Country or Region";
}

<form method="post">
    <div class="row p-3 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @if (Model.Id != null)
        {
            // edit
            title = "Edit Country or Region";
        }
        <div class="col-12 border-bottom">
            <h2 class="text-primary">@title</h2>
        </div>
        <div class="col-8 pt-4">
            <div class="form-group row">
                <div class="col-4 text-start">
                    <label asp-for="AlphaCode">Alpha Code</label>
                </div>
                <div class="col-8">
                    <input asp-for="AlphaCode" class="form-control" />
                    <span asp-validation-for="AlphaCode" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row pt-2">
                <div class="col-4 text-start">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-8 offset-4">
                    @if (Model.Id != 0)
                    {
                        <partial name="_EditAndBackToListButtonIntModal" model="Model.Id" />
                    }
                    else
                    {
                        <partial name="_CreateAndBackToListButton" />
                    }
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {

    <partial name="_ValidationScriptsPartial" /> @* for client side validation*@

}
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var title = "Add New City";
}
@model Clinic.Models.ViewModels.CityVM

<form method="post">
    <div class="row p-3 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @if (Model.City.Id != 0)
        {
            // edit
            title = "Edit City";
        }
        <div class="col-12 border-bottom">
            <h2 class="text-primary">@title</h2>
        </div>
        <div class="col-8 pt-4">
            <div class="form-group row">
                <div class="col-4 text-start">
                    <label asp-for="City.Name"></label>
                </div>
                <div class="col-8">
                    <input asp-for="City.Name" class="form-control" />
                    <span asp-validation-for="City.Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row pt-2">
                <div class="col-4 text-start">
                    Country or Region
                </div>
                <div class="col-8">
                    @Html.DropDownListFor(m => m.City.CountryOrRegionId, Model.CountryOrRegionList,
                   "Select Country or Region", new { @class = "form-control" })
                    <span asp-validation-for="City.CountryOrRegionId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-8 offset-4">
                    @if (Model.City.Id != 0)
                    {
                        <partial name="_EditAndBackToListButtonIntModal" model="Model.City.Id" />
                    }
                    else
                    {
                        <partial name="_CreateAndBackToListButton" />
                    }
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {

    <partial name="_ValidationScriptsPartial" /> @* for client side validation*@

}
@model Clinic.Models.ViewModels.LabVM
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var title = "Add New Lab";
}

<form method="post">
    <div class="row p-3 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @if (!Model.Lab.Id.Equals(""))
        {
            // edit
            title = "Edit Lab";
        }
        <div class="col-12 border-bottom">
            <h2 class="text-primary">@title</h2>
        </div>
        <div class="col-8 pt-4">
            <div class="form-group row">
                <div class="col-4 text-start">
                    <label asp-for="Lab.Name"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Lab.Name" class="form-control" />
                    <span asp-validation-for="Lab.Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row pt-2">
                <div class="col-4 text-start">
                    Address Detail
                </div>
                <div class="col-4 text-start">
                   @* <textarea asp-for="Lab.Address.AddressDetail" class="form-control">Address Detail</textarea>*@
                </div>
            </div>
            <div class="form-group row pt-2">
                <div class="col-4 text-start">
                    Country or Region
                </div>
                <div class="col-8">
                    @*Html.DropDownListFor(m => m.Lab.Address.CountryOrRegionId, Model.CountryOrRegionList,
                      "Select Country or Region", new { @class = "form-control" })
                    <span asp-validation-for="Lab.Address.CountryOrRegionId" class="text-danger"></span>*@
                </div>
            </div>
            <div class="form-group row pt-2">
                <div class="col-4 text-start">
                    City
                </div>
                <div class="col-8">
                    @*Html.DropDownListFor(m => m.Lab.Address.CityId, Model.CityList,
          "Select City", new { @class = "form-control" }
        <span asp-validation-for="Lab.Address.CityId" class="text-danger"></span>)*@
                </div>
            </div>
            <div class="form-group row pt-2">
                <div class="col-4 text-start">
                    Province
                </div>
                <div class="col-8">
                    @*Html.DropDownListFor(m => m.Lab.Address.ProvinceId, Model.ProvinceList,
          "Select Province", new { @class = "form-control" })
        <span asp-validation-for="Lab.Address.ProvinceId" class="text-danger"></span>*@
                </div>
            </div>
            <div class="form-group row">
                <div class="col-8 offset-4">
                    @if (!Model.Lab.Id.Equals(""))
                    {
                        <partial name="_EditAndBackToListButtonGuidModal" model="Model.Lab.Id" />
                    }
                    else
                    {
                        <partial name="_CreateAndBackToListButton" />
                    }
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {

    <partial name="_ValidationScriptsPartial" /> @* for client side validation*@

}